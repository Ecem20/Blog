@model CaseProject.Models.Login

<h2 style="color:crimson">Giriş Yap</h2>

<form id="account" method="post" asp-action="Login" asp-controller="Account">
    <br />
    <div asp-validation-summary="All" class="text-black"></div>

    <div class="form-group">
        <label class="col-md-2" asp-for="Email"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2" asp-for="Password"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
        </div>
    </div>

    <br />

    <div class="form-group">
        <div class="col-4">
            <input type="submit" value="Giriş Yap" class="btn btn-dark" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-4">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success">Ana Sayfaya Dön</a>
        </div>
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
