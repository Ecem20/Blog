@model CaseProject.Models.Register
@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div id="success-message" class="alert alert-success">
        @successMessage
    </div>
}
<h2 style="color:crimson">Üye Oluştur</h2>
<form id="account" method="post" asp-action="Register" asp-controller="Account">
    <br />
    <div asp-validation-summary="All" class="text-black"></div>


    <div class="form-group">
        <label class="col-md-2" asp-for="Name"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2" asp-for="Surname"></label>
        <div class="col-md-10">
            <input asp-for="Surname" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2" asp-for="Email"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2" asp-for="Password"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2" asp-for="ConfirmPassword"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
    </div>

    <br />

    <div class="form-group">
        <div class="col-md-10 offset-md-2">
            <input type="submit" value="Üye Oluştur" class="btn btn-dark" />
        </div>
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#success-message").fadeOut("slow", function () {
                    $(this).remove();
                });
            }, 2000);
        });
    </script>
}