@model List<CaseProject.Models.Blog>

<style>
    .blog-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .blog-table th,
        .blog-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

    .blog-buttons {
        display: flex;
    }

    .update-button,
    .delete-button {
        margin-right: 10px;
        padding: 8px;
        cursor: pointer;
    }
</style>

<a style="color:white" id="blog" class="btn btn-dark" href="/Blog/Create">Blog Yazısı Oluştur</a>

<table class="blog-table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Tags</th>
            <th>Content</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Where(p => p.AuthorId == ViewBag.UserId))
        {
            <tr>
                <td>@post.Category</td>
                <td>@post.Title</td>
                <td>@post.Tags</td>
                <td>@post.Content</td>
                <td>@post.Status</td>
                <td>
                    <a class="btn btn-primary text-white" asp-action="Update" asp-route-Id="@post.Id">Güncelle</a>
                    <a class="btn btn-primary text-white" asp-action="Delete" asp-route-Id="@post.Id">Sil</a>

                </td>
            </tr>
        }
    </tbody>
</table>


