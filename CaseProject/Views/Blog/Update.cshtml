@model CaseProject.Models.Blog

<h1>Blog Yazısını Güncelle</h1>

<form asp-action="Update" asp-route-id="@Model.Id" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="bloggerName" />
    <input type="hidden" asp-for="bloggerSurname" />
    <input type="hidden" asp-for="AuthorId" />
    <div class="form-group">
        <label asp-for="Category">Kategori</label>
        <input asp-for="Category" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Title">Başlık</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Tags">Tags</label>
        <input asp-for="Tags" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Content">içerik</label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Status">Durum</label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<CaseProject.Models.BlogPostStatus>()"></select>
    </div>
    <br />
    <div class="col-4">
        <button type="submit" class="btn btn-primary">Güncelle</button>

    </div>
    <br />
    <div class="col-4">
        <a asp-action="Index" class="btn btn-success">Listeye Dön</a>
    </div>

</form>
