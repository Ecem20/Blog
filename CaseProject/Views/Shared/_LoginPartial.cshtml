@using Microsoft.AspNetCore.Identity
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form method="post" id="logout" asp-action="logout" asp-controller="Account">
        <button type="button" onclick="document.getElementById('logout').submit()">Logout</button>
    </form>
}
else
{
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a style="font-weight: bold;" class="nav-link text-danger" id="login" asp-controller="Account" asp-action="Login">Giriş Yap</a>
            </li>
        </ul>
    </nav>
}
